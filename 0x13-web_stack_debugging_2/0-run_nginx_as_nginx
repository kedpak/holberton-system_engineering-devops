#!/usr/bin/env bash
sudo sed -i "4 i\user nginx;" /etc/nginx/nginx.conf
sudo sed -i "23 i\         client_body_temp_path /tmp/client_body;\n\tfastcgi_temp_path /tmp/fastcgi_temp;\n\tproxy_temp_path /tmp/proxy_temp;\n\tscgi_t\
emp_path /tmp/scgi_temp;\n\tuwsgi_temp_path /tmp/uwsgi_temp;" /etc/nginx/sites-available/default
sudo apt-get install lsof
lsof -i:8080 | awk 'FNR==2 {kill -9 $2}'
sudo sed "s/80/8080/g"
sudo service nginx restart
